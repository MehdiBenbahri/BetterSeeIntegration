{
  "name" :"Better See",
  "manifest_version" : 3,
  "version" :"0.4",
  "description" :"une extention pour y voir plus clair",
  "browser_action" :
  {
    "default_popup" :"index.html"
  },
     "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
	"commands": {
		"page": {
			"suggested_key": {
				"default": "Ctrl+Shift+Y"
			},
			"description": "tout lire"
		},
		"pause": {
			"suggested_key": {
				"default": "Ctrl+Shift+Z"
			},
			"description": "pause le tts"
		},
		"resume": {
			"suggested_key": {
				"default": "Ctrl+Shift+Z"
			},
			"description": "Reprend la lecture"
		},
		"stop": {
			"suggested_key": {
				"default": "Ctrl+Shift+Z"
			},
			"description": "arrÃªte le tts"
		}
	},
		
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs",
    "activeTab",
    "storage",
    "tts",
    "ttsEngine",
    "background",
	"<all_urls>"
  ]
}
